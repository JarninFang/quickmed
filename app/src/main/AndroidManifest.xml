<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jarnin.quickmed">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BlankActivity"
            android:label="@string/title_activity_blank"
            android:theme="@style/AppTheme.ActionBar"
            android:parentActivityName="com.example.jarnin.quickmed.FormsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jarnin.quickmed.FormsActivity" />
        </activity>
        <activity
            android:name=".FormsActivity"
            android:label="Select A Form"
            android:theme="@style/AppTheme.ActionBar"
            android:parentActivityName="com.example.jarnin.quickmed.UserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jarnin.quickmed.UserActivity" />
        </activity>
        <activity
            android:name=".HealthFormActivity"
            android:label="Health Test Results"
            android:theme="@style/AppTheme.ActionBar"
            android:parentActivityName="com.example.jarnin.quickmed.FormsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jarnin.quickmed.FormsActivity" />
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="Add/View Patients"
            android:theme="@style/AppTheme.ActionBar"
            android:parentActivityName="com.example.jarnin.quickmed.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jarnin.quickmed.LoginActivity" />
        </activity>
    </application>

</manifest>
